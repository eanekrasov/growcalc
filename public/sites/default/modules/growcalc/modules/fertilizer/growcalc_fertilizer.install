/**
 * Implements hook_install().
 */
function growcalc_fertilizer_install() {
  // Create the basic growcalc fertilizer type.
  $growcalc_fertilizer_type = growcalc_fertilizer_type_create(array(
    'type' => 'growcalc_fertilizer',
    'label' => t('Fertilizer'),
    'weight' => 0,
    'data' => '',
    'status' => 1,
    'module' => 'growcalc_fertilizer',
    'is_new' => TRUE
  ));

  growcalc_fertilizer_type_save($growcalc_fertilizer_type);

  // During installation, the t() function is unavailable, so we use get_t()
  // to store the name of the translation function.
  $t = get_t();

  // Create all the fields we are adding to our content type.
  // http://api.drupal.org/api/function/field_create_field/7
  foreach (_growcalc_fertilizer_installed_fields() as $field) {
    field_create_field($field);
  }

  // Create all the instances for our fields.
  // http://api.drupal.org/api/function/field_create_instance/7
  foreach (_growcalc_fertilizer_installed_instances() as $instance) {
    field_create_instance($instance);
  }

  drupal_flush_all_caches();
}

function _growcalc_fertilizer_installed_fields() {
  $t = get_t();
  return array(
    'growcalc_fertilizer' => array(
      'field_name'  => 'growcalc_fertilizer',
      'cardinality' => 1,
      'type'        => 'entityreference',
      'settings'    => array( 'target_type' => 'growcalc_fertilizer' ),
    ),

    'growcalc_elements' => array(
      'field_name'  => 'growcalc_elements',
      'cardinality' => FIELD_CARDINALITY_UNLIMITED,
      'type'        => 'field_collection',
      'settings'    => array(),
    ),
  );
}

function _growcalc_fertilizer_installed_instances() {
  $t = get_t();
  return array(
    'growcalc_elements' => array(
      'field_name'  => 'growcalc_elements',
      'entity_type' => 'growcalc_fertilizer',
      'bundle'      => 'growcalc_fertilizer',
      'label'       => $t('Elements'),
      'widget'      => array(
        'type'      => 'field_collection_embed'
      ),
    ),
    'growcalc_element' => array(
      'field_name'  => 'growcalc_element',
      'entity_type' => 'field_collection_item',
      'bundle'      => 'growcalc_elements',
      'label'       => $t('Growcalc Element'),
      'widget'      => array(
        'type'      => 'options_select'
      ),
      'required' => TRUE,
    ),
    'amount' => array(
      'field_name'  => 'amount',
      'entity_type' => 'field_collection_item',
      'bundle'      => 'growcalc_elements',
      'label'       => $t('Amount'),
      'widget'      => array(
        'type'      => 'number'
      ),
      'required' => TRUE,
    ),
  );
}


/*
 * Implements hook_uninstall().
 */
function growcalc_fertilizer_uninstall() {
  foreach(array_reverse(_growcalc_fertilizer_installed_instances()) as $instance) {
    $instance = field_info_instance($instance['entity_type'], $instance['field_name'], $instance['bundle']);
    field_delete_instance($instance, TRUE);
  }

  foreach (array_reverse(array_keys(_growcalc_fertilizer_installed_fields())) as $field) {
    field_delete_field($field);
  }

  field_purge_batch(1000);

  // At uninstall time we'll notify field.module that the entity was deleted
  // so that attached fields can be cleaned up.
  field_attach_delete_bundle('growcalc_fertilizer' , 'growcalc_fertilizer');
}
